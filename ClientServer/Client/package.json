{
  "name": "debtsportal",
  "version": "1.0.0",
  "description": "A portal for clients to track their debt information",
  "main": "app.js",
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bootstrap": "^3.3.6",
    "file-saver": "^1.3.2",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^2.2.3",
    "jspdf": "^1.2.61",
    "jspdf-autotable": "^2.0.33",
    "lokka": "^1.7.0",
    "lokka-transport-http": "^1.3.2",
    "moment": "^2.13.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "react-widgets": "^3.4.3",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "clean-css": "^3.4.13",
    "copyfiles": "^0.2.1",
    "redux-devtools": "^3.3.1",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "build:dev": "npm run build:common && npm run watch",
    "build:release": "npm run build:common && npm run build:optimise",
    "build:common": "npm run build:clean && npm run build:createBuildFolder && npm run build:copyConfig && npm run build:copyHtml && npm run build:copyFavicon && npm run build:copyReactWidgets && npm run build:copySystemCss && npm run build:copyCss && npm run build:copyTableExport && npm run build:copyFileSaver && npm run build:copyJsPdf && npm run build:copyJsPdfAutoTable && npm run build:copyImage && npm run build:copyRobots",
    "build:clean": "rimraf build",
    "build:createBuildFolder": "mkdir build",
    "build:copyRobots": "copyfiles -f src/robots.txt build",
    "build:copyConfig": "copyfiles -f src/config.js build",
    "build:copyHtml": "copyfiles -f src/index.html build",
    "build:copyFavicon": "copyfiles -f src/favicon.ico build",
    "build:copyImage": "copyfiles -u 2 src//styles/img/*.* build",
    "build:copyReactWidgets": "npm run build:copyReactWidgetsFont && npm run build:copyReactWidgetsImage && npm run build:copyReactWidgetsCss",
    "build:copyReactWidgetsFont": "copyfiles -f node_modules/react-widgets/dist/fonts/*.* build/fonts",
    "build:copyReactWidgetsImage": "copyfiles -f node_modules/react-widgets/dist/img/*.* build/img",
    "build:copyReactWidgetsCss": "copyfiles -f node_modules/react-widgets/dist/css/react-widgets.css build",
    "build:copySystemCss": "copyfiles -f node_modules/bootstrap/dist/css/bootstrap.min.css build && cleancss src/styles/css/system.css -o build/bundle.css",
    "build:copyCss": "copyfiles -f src/styles/css/custom.css build",
    "build:copyTableExport": "copyfiles -f src/tableExport.min.js build/libs",
    "build:copyFileSaver": "copyfiles -f node_modules/file-saver/FileSaver.min.js build/libs",
    "build:copyJsPdf": "copyfiles -f node_modules/jspdf/dist/jspdf.min.js build/libs",
    "build:copyJsPdfAutoTable": "copyfiles -f node_modules/jspdf-autotable/dist/jspdf.plugin.autotable.js build/libs",
    "watch": "watchify -v --exclude src/config.js -t [ babelify ] src/app.js -o build/bundle.js",
    "build:optimise": "browserify -v --exclude src/config.js -t [ babelify ] src/app.js | uglifyjs --verbose > build/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Team Smileyface",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdvancedLegal/ALB"
  }
}
